{
  "manifest_version": 3,
  "name": "Stream It",
  "version": "1.0",
  "description": "Add streaming options in IMDb and Google search results.",
 "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "streamit@streamitplayer.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.imdb.com/title/*"],
      "js": ["scripts/imdb.js"]
    },
    {
      "matches": ["https://www.google.com/*"],
      "js": ["scripts/google.js"]
    }
  ]
} 
