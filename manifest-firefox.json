{
  "manifest_version": 2,
  "name": "Stream Now",
  "version": "1.0",
  "description": "Find streaming options for movies and TV shows on IMDb and Google",
  "permissions": [
    "*://*.imdb.com/*",
    "*://*.google.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.imdb.com/title/*"],
      "js": ["scripts/imdb.js"]
    },
    {
      "matches": ["*://*.google.com/*"],
      "js": ["scripts/google.js"]
    }
  ]
} 